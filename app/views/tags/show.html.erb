<!-- Title -->
<header>
  <div class="jumbotron jumbotron-fluid" id="title-about-page">
    <div class="container text-center">
      <h1 class="display-4">Tag: <%= @tag.name %></h1>
      <p class="tag-page-blog">
        <%= link_to 'Home', static_pages_home_path, class: 'btn-link-tag' %> /
        <%= link_to 'All posts', posts_path, class: 'btn-link-tag' %> /
        <span>TAG: <%= @tag.name %></span>
      </p>
    </div>
  </div>
</header>

<div class="container-fluid">
  <!-- Start row -->
  <p><%= link_to 'New Post', new_post_path, class: 'btn btn-success' %></p>
  <hr>
  <div class="row">
    <!-- Left column -->
    <div class="col-lg-8 mb-9 mb-lg-0">
      <div class="row">
      <!-- Start post card -->
        <% if @tag.posts.empty?  %>
          <h2>No posts</h2>
        <% else %>
          <%= render @tag.posts %>
        <% end %>
      <!-- End post card -->
      </div>
    </div>
    <!-- End Left column -->

    <!-- Right column -->
    <div class="col-lg-4">
      <%= render 'shared/right-column' %>
    </div>
    <!-- End Right column -->
  </div>
  <!-- End row -->
</div>
<!-- End container -->
