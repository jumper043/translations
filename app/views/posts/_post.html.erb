<% @posts.each do |post| %>
  <article class="border-0 p-0">
    <div class="card-body mb-4">
      <div>
        <%= link_to post do %>
          <%= image_tag(post.image_url(:large), class: 'img-fluid rounded mb-5') if post.image? %>
        <% end %>
      </div>
      <small class="d-block text-secondary mb-2">
        <%= post.created_at.strftime("%B %d, %Y") %>
      </small>
      <h2 class="h3 mb-4">
        <%= link_to post.title, post %>
      </h2>
      <p><%= post.description %></p>
      <!-- Comments icon -->
      <div>
        <hr class="mt-3 mb-3">
        <%= link_to post_path(post, anchor: 'list-comment'), class: 'icon-comment-block' do %>
          <%= icon('far', 'comment-alt') %> <%= post.comments.count %>
        <% end %>
        <!-- Post views counter -->
        <span class="icon-comment-block ml-3"><%= icon('far', 'eye') %> <%= post.hits %></span>
      </div>
      <!-- End Comments icon -->
    </div>
  </article>
<% end %>
